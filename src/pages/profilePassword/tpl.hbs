<main class="profile">
  <section class="content">
    <div class="profile__container">
      <div class="profile__left profile-go-back">
        <a href="/profile" class="profile-go-back__button">
          <span class="gg-arrow-left"></span>
        </a>
      </div>
      <div class="profile__right">
        <div class="profile__content">
          <div class="profile-avatar">
            <div class="profile-avatar__container">

            </div>
          </div>
          <div class="profile-title"></div>
          <form id="password_form">
            <div class="profile-form">
              <div class="profile-field">
                {{{labelOldPassword}}}
                {{{fieldOldPassword}}}
                {{{validationOldPassword}}}
              </div>
              <div class="profile-field">
                {{{labelNewPassword}}}
                {{{fieldNewPassword}}}
                {{{validationNewPassword}}}
              </div>
              <div class="profile-field">
                {{{labelRepeatNewPassword}}}
                {{{fieldRepeatNewPassword}}}
                {{{validationRepeatNewPassword}}}
              </div>
            </div>
            <div class="profile-control">
              {{{buttonSave}}}
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>
