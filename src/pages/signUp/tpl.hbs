<div class="sign-up">
  <section class="content">
    <div class="sign-up__container">
      <div class="sign-up__content">
        <form id="sign-up">
          <div class="sign-up__header">
            <h2>Регистрация</h2>
          </div>
          <div class="sign-up__form">
            <div class="sign-up-form">
              {{{textboxLogin}}}
              {{{textboxFirstName}}}
              {{{textboxSecondName}}}
              {{{textboxEmail}}}
              {{{textboxPhone}}}
              {{{textboxPassword}}}
              {{{textboxRepeatPassword}}}
            </div>
          </div>
          <div class="sign-up__footer">
            {{{submit}}}
            {{{link}}}
          </div>
        </form>
      </div>
    </div>
  </section>
</div>
