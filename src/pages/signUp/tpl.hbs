<div class="sign-up">
  <section class="content">
    <div class="sign-up__container">
      <div class="sign-up__content">
        <form id="sign-up">
          <div class="sign-up__header">
            <h2>Регистрация</h2>
          </div>
          <div class="sign-up__form">
            <div class="sign-up-form">
              <div>
                {{{textboxLogin}}}
                {{{validationLogin}}}
              </div>
              <div>
                {{{textboxFirstName}}}
                {{{validationFirstName}}}
              </div>
              <div>
                {{{textboxSecondName}}}
                {{{validationSecondName}}}
              </div>
              <div>
                {{{textboxEmail}}}
                {{{validationEmail}}}
              </div>
              <div>
                {{{textboxPhone}}}
                {{{validationPhone}}}
              </div>
              <div>
                {{{textboxPassword}}}
                {{{validationPassword}}}
              </div>
              <div>
                {{{textboxRepeatPassword}}}
                {{{validationRepeatPassword}}}
              </div>
            </div>
          </div>
          <div class="sign-up__footer">
            {{{submit}}}
            {{{link}}}
          </div>
        </form>
      </div>
    </div>
  </section>
</div>
